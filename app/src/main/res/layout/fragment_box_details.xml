<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Box Header -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦"
                    android:textSize="64sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/boxName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Box Name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/boxDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No description"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/boxLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No location"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@color/surface"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Products in Box -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Products in Box"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Product count -->
                <TextView
                    android:id="@+id/productsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 products assigned"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp" />

                <!-- Products RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/productsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone" />

                <!-- Empty state -->
                <TextView
                    android:id="@+id/noProductsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_products_in_box"
                    android:textSize="14sp"
                    android:textColor="@color/text_tertiary"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="visible" />

                <!-- Action Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <!-- Modify Products Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/modifyProductsButton"
                        style="@style/Widget.App.Button.Outlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Modify"
                        android:textAllCaps="false"
                        android:layout_marginEnd="4dp" />

                    <!-- Add Products Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addProductsButton"
                        style="@style/Widget.App.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add"
                        android:textAllCaps="false"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <!-- Bulk Add Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addBulkButton"
                    style="@style/Widget.App.Button.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Products in Bulk"
                    android:textAllCaps="false"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Edit Box and Print Label Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Edit Box Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editBoxButton"
                style="@style/Widget.App.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Box"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp" />

            <!-- Print Label Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/printLabelButton"
                style="@style/Widget.App.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Print Label"
                android:textAllCaps="false" />

        </LinearLayout>

        <!-- Box Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Created At -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Created:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/boxCreatedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jan 1, 2024"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Printer Configuration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Printer Configuration"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Test Printer Connection Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/testPrintButton"
                    style="@style/Widget.App.Button.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Printer Connection"
                    android:textAllCaps="false" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
 </ScrollView>

