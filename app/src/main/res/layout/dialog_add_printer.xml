<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Printer Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Printer Name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/printerNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- MAC Address -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="MAC Address (XX:XX:XX:XX:XX:XX)"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/printerMacInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:fontFamily="monospace" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Printer Model -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Printer Model"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/printerModelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Generic ESC/POS" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Helper text for model -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Select your printer model for optimized connection"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="-8dp" />

    <!-- Label Width -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Label Width (mm)"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/labelWidthInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:text="50" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Label Height -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Label Height (mm)"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/labelHeightInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Helper text for height -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Leave empty for continuous roll (auto-height)"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="-8dp" />

    <!-- DPI -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Printer DPI"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/printerDpiInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="203 DPI" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Font Size -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Font Size"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/printerFontSizeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Small" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Set as Default Checkbox -->
    <CheckBox
        android:id="@+id/setDefaultCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Set as default printer"
        android:textColor="@color/text_primary"
        android:textSize="14sp" />

    <!-- Info about printer settings -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Width: typical 50-100mm\n• Height: leave empty for auto-height (continuous roll)\n• DPI: usually 203 or 300\n• Font Size: affects text readability"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="8dp" />

</LinearLayout>

</ScrollView>
